@model List<Sistema_Funcionario.Models.Funcionario>

    <h2>Funcionarios</h2>

    <a asp-action="Criar" class = "btn btn-primary">Novo Funcionario</a>

    <table class="table mt-3">
        <tr>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Salario Base</th>
            <th>Salario Final</th>
            <th>Acoes</th>
        </tr>
        @*? Toda vez que voce fizer um codigo de C# no cshtml, voce tem que usar '@' *@
        @foreach(var funcionario in Model)
        {
            <tr>
                <td>@funcionario.Nome</td>
                <td>@funcionario.GetType().Name</td> @** Mostra o tipo de objeto funcionario (se eh gerente ou vendedor) *@
                <td R$ @funcionario.SalarioBase></td>
                <td R$ @funcionario.CalcularSalario()></td>
                <td>
                    <a asp-action="Deletar" asp-route-id="@funcionario.Id" class="btn btn-danger">Exluir</a>
                </td>
            </tr>
        }
    </table>