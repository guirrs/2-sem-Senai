@model Sistema_de_Personagens.Models.Personagem

<h2>Cadastrar Personagem</h2>

<form asp-action="Criar">
    <label>Nome</label>
    <input type= "text" name="NomeConstrutor" class="form-control">

    <label>Nivel</label>
    <input type="number" name="NivelConstrutor" class="form-control">

    <label>Classe</label>
    <select name="ClasseConstrutor">
        <option value="Mago">Mago</option>
        <option value="Guerreiro">Guerreiro</option>
    </select>

    <button type="submit" class="btn btn-sucess">Salvar</button>
</form>